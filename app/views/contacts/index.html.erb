<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6"><h3>Contacts</h3></div>
  <div class="col-md-4"></div>
  <div class="col-md-2">
    <%= link_to 'New Contact', new_contact_path,class: 'btn btn-primary mb-1' %>
  </div>
</div>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>DisplayName</th>
      <th>PrimaryEmail</th>
      <th>Contact api url</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact['Id']%></td>
        <td><%= contact['DisplayName']%></td>
        <td><%= contact['PrimaryEmail']%></td>
        <td><%=contact['ResourceUri']%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%#= will_paginate @contacts, list_classes: %w(pagination justify-content-end) %>

